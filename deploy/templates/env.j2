# Funnel Environment Configuration
# Managed by Ansible - local changes may be overwritten

# ClickHouse Cloud connection
CLICKHOUSE_URL={{ clickhouse_url }}
CLICKHOUSE_USER={{ clickhouse_user }}
CLICKHOUSE_PASSWORD={{ clickhouse_password }}
CLICKHOUSE_DATABASE={{ clickhouse_database | default('nostr') }}

# Relay to ingest events from
RELAY_URL={{ relay_url }}

# API Authentication
{% if api_token %}
API_TOKEN={{ api_token }}
{% else %}
# API_TOKEN not set - authentication disabled
{% endif %}
